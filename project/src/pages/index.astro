---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home">
  <div class="text-center">
    <h1 class="text-4xl font-bold mb-4">Welcome to My Portfolio</h1>
    <p class="text-xl text-gray-600 mb-8">Web Developer & Graphic Designer</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Latest Projects</h2>
        <p class="text-gray-600">Check out some of my recent work and personal projects.</p>
        <a href="/projects" class="inline-block mt-4 px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">View Projects</a>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4">Recent Blog Posts</h2>
        <p class="text-gray-600">Read my thoughts on web development and design.</p>
        <a href="/blog" class="inline-block mt-4 px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Read Blog</a>
      </div>
    </div>
  </div>
</MainLayout>